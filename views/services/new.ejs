<% include ../partials/header %>

<div class="container">
  <div class="jumbotron">
    <h1> Add a new service </h1>
    <i> Do not leave any fields blank </i>
  </div>
</div>

<div class="container" style="margin:auto;">
      <form  action="/services" method="POST">
        <div class="form-group">
          <label for="servicename">Service Name</label>
          <input type="text" class="form-control" name="name" id="servicename" placeholder="The name of the service provided">
          <p></p>
          <label for="serviceprice">Service Price</label>
          <input type="number" class="form-control" name="price" id="serviceprice" placeholder="The price of the service" min="0.01" step="0.01">
          <p></p>
          <label for="serviceimage">Service Image</label>
          <input type="text" class="form-control" name="image" id="serviceimage" placeholder="Enter the url to the image">
        </div>
        <div class="form-group">
          <label for="servicedescription">Service Description</label>
          <textarea class="form-control" name="description" id="servicedescription" rows="3" placeholder="Describe the service provided"></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
</div>

  </div>
</div>

<% include ../partials/footer %>
