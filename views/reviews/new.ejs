<% include ../partials/header %>

<div class="container">
  <div class="jumbotron">
    <h1> Add a new comment to <%= service.name %></h1>
  </div>
</div>

<div class="container" style="margin:auto;">
      <form  action="/services/<%= service._id %>/reviews" method="POST">
        <div class="form-group">
          <label for="reviewtext">Text</label>
          <textarea class="form-control" name="review[text]" id="reviewtext" rows="3" placeholder="Enter your comment"></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
</div>

  </div>
</div>

<div class="container"> </div>

